# Production Environment Variables
# Copy to .env for production deployment

# Database
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=saas_personal_agent

# NextAuth.js
NEXTAUTH_URL=https://yourdomain.com
NEXTAUTH_SECRET=your-very-secure-secret-key-min-32-chars

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Stripe
STRIPE_SECRET_KEY=sk_live_your-live-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-live-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-webhook-secret

# Resend
RESEND_API_KEY=re_your-resend-api-key
FROM_EMAIL=noreply@yourdomain.com

# Optional: Adminer port (remove in production)
ADMINER_PORT=8080